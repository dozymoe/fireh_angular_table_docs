.breadcrumbs
    ol
        margin-left 0
        padding-left  0

        > li
            display  inline-block
            margin-left  0.25em
            margin-right  0.25em

            &:before
                content  "Â»"
                margin-right  0.25em

            &:first-child:before
                content  none

header.navbar
    background-color rgba(12,75,51, 0.1)
    padding-top 2em

.navbar-header > .logo
    color  rgb(77,78,81)
    font-size  2em
    font-variant  small-caps
    font-weight  bold
    line-height 1
    margin 15px
    vertical-align  bottom

.navbar-nav > li > a
    color  rgb(77,78,81)
    font-weight  bold
    text-transform  uppercase

.navbar-toggle
    > .icon-bar
        background-color #563d7c

.pagination-size > div
    margin-bottom 20px
    margin-top 20px

@media screen and (min-width: 768px)
    .navbar-header
        float left

        > .logo
            line-height 20px
            margin 0
            padding-bottom 15px
            padding-top 15px

    .navbar-nav
        float right


// table sorting

[data-fh-table-sorting]
    display inline-block
    white-space nowrap

.fh-table-sorting > button
    background-color transparent
    border 1px solid #aaa
    border-radius 0.4em
    padding 0 0.5em
    vertical-align middle
            
.fh-table-sorting > button:hover,
.fh-table-sorting > button:active,
.fh-table-sorting > button:.active
    background-color #2ec1cc
    color white


// field-select
.fh-table-field-select
    .modal-body,
    .modal-footer
        background-color white
        margin-left auto
        margin-right auto
        max-width 20em
        width 95%


// filter
.select-country > div > .dropdown-menu
    padding 4px
    min-width 20em


// infinite-scroll
[data-fh-infinite-scroll]
    max-height 20em
    overflow-y scroll
